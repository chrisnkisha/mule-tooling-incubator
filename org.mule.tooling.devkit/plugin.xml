      <extension
            id="devkitBuilder"
            name="Devkit Project Builder"
            point="org.eclipse.core.resources.builders">
         <builder
               hasNature="true">
            <run
                  class="org.mule.tooling.devkit.builder.DevkitBuilder">
            </run>
         </builder>
      </extension>
      

      <extension
            id="devkitNature"
            name="Devkit Project Nature"
            point="org.eclipse.core.resources.natures">
